@model IEnumerable<Varlık_ZimmetDepoYonetimi.UI.Models.ViewModels.UrunViewModel>
@{

    ViewData["Title"] = "Ürünler";

}
<style>
    .card-body {
        margin-bottom: 30px;
    }

    .Asagıyacek {
        max-height: 620px;
    }
</style>
<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Ürün Listesi</h3>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Ürün
                </a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive Asagıyacek">
                <table id="Datatable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Model</th>
                            <th>Garanti</th>
                            <th>Açıklama</th>
                            <th>Stok Miktarı</th>
                            <th>Statü</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var urun in Model)
                        {
                            <tr>
                                <td>@(urun.Model?.ModelAdi ?? "Belirtilmemiş")</td>
                                <td>
                                    @if (urun.GarantiliMi == true)
                                    {
                                        <span class="badge bg-success">Garantili</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Garantisiz</span>
                                    }
                                </td>
                                <td style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @(urun.Aciklama ?? "Belirtilmemiş")
                                </td>

                                <td>
                                    @if (urun.StokMiktari > 10)
                                    {
                                        <span class="badge bg-success">@urun.StokMiktari</span>
                                    }
                                    else if (urun.StokMiktari > 0)
                                    {
                                        <span class="badge bg-warning">@urun.StokMiktari</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Stok Yok</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statuRenk = urun.Statu?.StatuAdi?.ToLower() switch
                                        {
                                            var s when s?.Contains("kullanımda") == true => "success",
                                            var s when s?.Contains("arızalı") == true => "danger",
                                            var s when s?.Contains("tamirde") == true => "warning",
                                            var s when s?.Contains("kullanım dışı") == true => "secondary",
                                            _ => "info"
                                        };
                                    }
                                    <span class="badge bg-@statuRenk">@(urun.Statu?.StatuAdi ?? "Belirtilmemiş")</span>
                                </td>
                                <td>
                                    @if (urun.AktifMi)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@urun.UrunId" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i> Detay
                                        </a>
                                        @if (User.IsInRole("Admin") || User.HasClaim("Permission", Permissions.Urunler.Duzenleme) || User.HasClaim("Permission", Permissions.Urunler.Silme))
                                        {
                                            <a asp-action="Edit" asp-route-id="@urun.UrunId" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@urun.UrunId" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Sil
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<!-- Bootstrap 5 (gerekliyse) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#Datatable').DataTable();
    });
</script>

