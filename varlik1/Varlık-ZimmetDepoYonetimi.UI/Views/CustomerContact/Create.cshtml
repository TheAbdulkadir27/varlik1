@model CustomerContactViewModel
@{
    ViewData["Title"] = "Yeni Müşteri İletişimi";
}

<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yeni Müşteri iletişimi</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="employeeform">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Adres Adı</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Numara</label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">İş Unvanı</label>
                    <textarea asp-for="JobTitle" class="form-control"></textarea>
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefon Numarası</label>
                    <input asp-for="PhoneNumber" class="form-control" type="text" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email Adres</label>
                    <input asp-for="EmailAddress" class="form-control" type="text" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Acıklama</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Müşteriler</label>
                    <select asp-for="CustomerId" asp-items="@Model.Customers" class="form-select" required>
                        <option value="">Müşteri Seçiniz...</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById("employeeform").addEventListener("submit", function (e) {
        if (!this.checkValidity()) {
            // Form geçerli değilse butonu değiştirme
            return;
        }

        const button = this.querySelector("button[type='submit']");
        button.disabled = true;
        button.innerText = "Lütfen Bekleyin...";
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 