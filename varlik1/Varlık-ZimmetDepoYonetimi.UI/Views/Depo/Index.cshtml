@{
}

@model IEnumerable<Depo>
@{
    ViewData["Title"] = "Depolar";
}

<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Depo Listesi</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Depo
            </a>
        }
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Depo Adı</th>
                            <th>Şirket</th>
                            <th>Ürün Sayısı</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var depo in Model)
                        {
                            <tr>
                                <td>@depo.DepoAdi</td>
                                <td>@(depo.Sirket?.SirketAdi ?? "-")</td>
                                <td>@(depo.DepoUruns?.Where(x => !x.Urun.Zimmets.Any()).Count() ?? 0)</td>
                                <td>
                                    @if (depo.AktifMi == true)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@depo.DepoId" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@depo.DepoId" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@depo.DepoId" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
