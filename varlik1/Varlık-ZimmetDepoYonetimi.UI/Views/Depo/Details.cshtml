@model Depo
@{
    ViewData["Title"] = "Depo Detayları";
}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Depo Detayları</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4>Genel Bilgiler</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Depo Adı</dt>
                        <dd class="col-sm-8">@Model.DepoAdi</dd>

                        <dt class="col-sm-4">Şirket</dt>
                        <dd class="col-sm-8">@(Model.Sirket?.SirketAdi ?? "-")</dd>

                        <dt class="col-sm-4">Durum</dt>
                        <dd class="col-sm-8">
                            @if (Model.AktifMi == true)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h4>Depodaki Ürünler</h4>
                    @if (Model.DepoUruns != null && Model.DepoUruns.Any())
                    {
                        <div class="table-responsive">
                            <table id="Datatable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Model</th>
                                        <th>Stok Miktarı</th>
                                        <th>Güncel Fiyat</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var depoUrun in Model.DepoUruns)
                                    {

                                        if (!depoUrun.Urun.Zimmets.Any())
                                        {
                                            <tr onclick="window.location.href='@Url.Action("UrunDetay", "Depo", new { id = depoUrun.Urun.UrunId })';">
                                                <td>@depoUrun?.Urun?.Model?.ModelAdi</td>
                                                <td>@depoUrun?.Urun?.StokMiktari</td>
                                                <td>@depoUrun?.Urun?.UrunGuncelFiyat?.ToString("C")</td>
                                                <td>
                                                    @if (depoUrun?.Urun?.AktifMi == true)
                                                    {
                                                        <span class="badge bg-success">Aktif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Pasif</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Bu depoda henüz ürün bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>
            <div class="text-end mt-3">
                <a href="/Depo/Index/" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>Geri Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.DepoId" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            </div>
        </div>
    </div>
</div>
<style>
    #Datatable td:hover
    {
        cursor:pointer;
        background-color: #e0e0e0;
    }
 </style>

