@model DepoViewModel
@{
    ViewData["Title"] = "Yeni Depo";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yeni Depo Ekle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="storageform">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DepoAdi" class="form-label">Depo Adı</label>
                            <input asp-for="DepoAdi" class="form-control" required/>
                            <span asp-validation-for="DepoAdi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SirketId" class="form-label">Şirket</label>
                            <select asp-for="SirketId" asp-items="Model.Sirketler" class="form-select" required>
                                <option value="">Şirket Seçiniz</option>
                            </select>
                            <span asp-validation-for="SirketId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("storageform").addEventListener("submit", function (e) {
        if (!this.checkValidity()) {
            // Form geçerli değilse butonu değiştirme
            return;
        }

        const button = this.querySelector("button[type='submit']");
        button.disabled = true;
        button.innerText = "Lütfen Bekleyin...";
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}