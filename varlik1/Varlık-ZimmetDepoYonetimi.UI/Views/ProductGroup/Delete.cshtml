@model ProductGroup
@{
    ViewData["Title"] = "Ürün Grubu Sil";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ürün Grubu Silme Onayı</h3>
        </div>
        <div class="card-body">
            <h4>Bu Ürün Grubunu silmek istediğinizden emin misiniz?</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3">Ürün Grubu Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Ürün Grubu Açıklaması</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ID" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 