@model IEnumerable<UrunStatuListesiViewModel>
@{
    ViewData["Title"] = "Ürün Statü Listesi";
}
<style>
    tr {
        cursor: pointer;
    }

        tr:hover 
        {
            background-color: #f0f8ff;
            transform: scale(1);
        }
</style>
<div class="container mt-4">
    <div class="row">
        <!-- Kullanımda Olan Ürünler -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Kullanımda (@Model.Count(x => x.StatuTipi == StatuTipi.Kullanımda))</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Model</th>
                                    <th>Stok</th>
                                    <th>Açıklama</th>
                                    <th>Son Güncelleme</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var urun in Model.Where(x => x.StatuTipi == StatuTipi.Kullanımda))
                                {
                                    <tr onclick="window.location='@Url.Action("Edit", "Statu", new { id = urun.UrunId})'">
                                        <td>@urun.ModelAdi</td>
                                        <td>
                                            @if (urun.StokMiktari > 10)
                                            {
                                                <span class="badge bg-success">@urun.StokMiktari</span>
                                            }
                                            else if (urun.StokMiktari > 0)
                                            {
                                                <span class="badge bg-warning">@urun.StokMiktari</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Stok Yok</span>
                                            }
                                        </td>
                                        <td style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @(urun.Açıklama ?? "Belirtilmemiş")
                                        </td>

                                        <td>@urun.SonGuncellemeTarihi.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Arızalı Ürünler -->
