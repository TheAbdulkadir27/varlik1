@model Yetki
@{
    ViewData["Title"] = "Yetki Düzenle";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yetki Düzenle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="YetkiId" />
                <div class="mb-3">
                    <label asp-for="YetkiAdi" class="form-label">Yetki Adı</label>
                    <input asp-for="YetkiAdi" class="form-control" />
                    <span asp-validation-for="YetkiAdi" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="AktifMi" class="form-check-input" />
                    <label asp-for="AktifMi" class="form-check-label">Aktif</label>
                </div>
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 