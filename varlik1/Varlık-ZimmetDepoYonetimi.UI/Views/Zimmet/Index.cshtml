@model IEnumerable<Zimmet>
@{
    ViewData["Title"] = "Zimmetler";
}
<style> 
    .Asagıyacek
    {
       max-height: 620px;
    }
    .card-body
    {
        margin-bottom:30px;
    }
 </style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Zimmet Listesi</h2>
        @if (User.IsInRole("Admin") || User.IsInRole("ZimmetSorumlusu") || User.HasClaim("Permission",Permissions.Zimmetler.Atama))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Zimmet
            </a>
        }
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive Asagıyacek">
                <table id="Datatable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Zimmetlenen Kişi</th>
                            <th>Ürün Açıklaması</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (!item.Urun.KayipCalintis.Any())
                            {
                                <tr>
                                    <td>@(item.Urun?.Model?.ModelAdi ?? "Belirtilmemiş")</td>
                                    <td>@(item.AtananCalisan?.AdSoyad ?? "Belirtilmemiş")</td>
                                    <td style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @(item.Urun?.Aciklama ?? "Belirtilmemiş")
                                    </td>

                                    <td>@item.ZimmetBaslangicTarihi?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.AktifMi == true)
                                        {

                                            <span class="badge bg-success">Aktif</span>

                                        }

                                        else
                                        {
                                            <span class="badge bg-danger">İade Edildi</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AktifMi == true)
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirmDelete(@item.ZimmetId)">
                                                <i class="fas fa-undo"></i> İade Al
                                            </button>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.ZimmetId" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Detay
                                        </a>
                                        <button type="submit" class="btn btn-secondary btn-sm" onclick="return ZimmetAtama(@item.ZimmetId)">
                                            <i class="fa-solid fa-people-arrows"></i> Zimmet Ata
                                        </button>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@(item.Urun?.Model?.ModelAdi ?? "Belirtilmemiş")</td>
                                    <td>@(item.AtananCalisan?.AdSoyad ?? "Belirtilmemiş")</td>
                                    <td style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @(item.Urun?.Aciklama ?? "Belirtilmemiş")
                                    </td>

                                    <td>@item.ZimmetBaslangicTarihi?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.Urun.KayipCalintis.FirstOrDefault()?.KayipMi == true)
                                        {
                                            <span class="badge bg-danger">Kayıp</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Çalıntı</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AktifMi == true)
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirmDelete(@item.ZimmetId)" disabled>
                                                <i class="fa-solid fa-lock"></i> İade Al
                                            </button>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.ZimmetId" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Detay
                                        </a>
                                        <button type="submit" class="btn btn-secondary btn-sm" onclick="return ZimmetAtama(@item.ZimmetId)" disabled>
                                            <i class="fa-solid fa-users-slash"></i> Zimmet Ata
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(itemid)
    {
        if (confirm("Silmek istediğinize emin misiniz?"))
        {
            window.location.href = "/Zimmet/IadeAl/" + itemid
        } else
        {
            return false;
        }
    }
    function ZimmetAtama(itemid)
    {
        if (confirm("Atamak İstediginize emin misiniz?"))
        {
            window.location.href = "/Zimmet/ZimmetAta/" + itemid
        } else
        {
            return false;
        }
    }
</script>
<style>
    /* Tabloyu genişletmek için */
    #Datatable {
        width: 100% !important;
    }
    /* DataTable için responsive özelliği aktif et */
    .dataTables_wrapper {
        width: 100%;
        overflow-x: auto; /* Yatay kaydırma çubuğu ekler */
    }

    /* Gerekirse her bir sütunun genişliğini ayarlayabilirsin */
    th, td {
        white-space: nowrap; /* Hücrelerdeki içerik kaydırılmasın */
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<!-- Bootstrap 5 (gerekliyse) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#Datatable').DataTable();
    });
</script>
