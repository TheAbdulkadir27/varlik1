@model Zimmet
@{
    ViewData["Title"] = "Zimmet Detayı";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Zimmet Detayı</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ürün</dt>
                        <dd class="col-sm-8">@ViewBag.Name</dd>

                        <dt class="col-sm-4">Zimmetlenen Kişi</dt>
                        <dd class="col-sm-8">@Model.AtananCalisan?.AdSoyad</dd>

                        <dt class="col-sm-4">Ürün Açıklaması</dt>
                        <dd class="col-sm-8">@Model.Urun?.Aciklama</dd>

                        <dt class="col-sm-4">Başlangıç Tarihi</dt>
                        <dd class="col-sm-8">@Model.ZimmetBaslangicTarihi?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Durum</dt>
                        <dd class="col-sm-8">
                            @if (Model.AktifMi == true)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            @if(Model.AktifMi == false)
                            {
                                <span class="badge bg-danger">İade Edildi</span>
                            }
                        </dd>
                        <dt class="col-sm-4">Kayıp/Calinti</dt>
                        <dd class="col-sm-8">
                            @if(Model.Urun.KayipCalintis.Any())
                            {
                                if (Model.Urun.KayipCalintis.FirstOrDefault()?.KayipMi == true)
                                {
                                    <span class="badge bg-danger">Bu Ürün Kayıp</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Bu Ürün Çalınmıştır</span>
                                }
                            }
                        </dd>

                        @if (Model.ZimmetBitisTarihi.HasValue)
                        {
                            <dt class="col-sm-4">İade Tarihi</dt>
                            <dd class="col-sm-8">@Model.ZimmetBitisTarihi?.ToString("dd/MM/yyyy")</dd>
                        }
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5>Açıklama</h5>
                    <p>@Model.Aciklama</p>
                </div>
            </div>

            <div class="text-end mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>