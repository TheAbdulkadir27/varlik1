@model IEnumerable<Varlık_ZimmetDepoYonetimi.UI.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Roles)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@string.Join(", ", item.Roles)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Rolleri Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-user-slash"></i> Kullanıcı Sil
                                </a>
                                <a asp-action="KullaniciYetkileri" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-user-minus"></i> Bu Kullanıcıya ait Yetkileri Gör/Düzenle/Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">