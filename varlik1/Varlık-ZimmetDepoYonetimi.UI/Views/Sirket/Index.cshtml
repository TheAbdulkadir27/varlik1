@model IEnumerable<Varlık_ZimmetDepoYonetimi.UI.Models.Sirket>
@{
    ViewData["Title"] = "Şirketler";
}
<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Şirket
            </a>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table id="sirketlerTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Şirket Adı</th>
                            <th>Ekip Sayısı</th>
                            <th>Çalışan Sayısı</th>
                            <th>Durum</th>
                            <th style="width: 200px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sirket in Model)
                        {
                            <tr>
                                <td>@sirket.SirketAdi</td>
                                <td>@(sirket.SirketEkips?.Count ?? 0)</td>
                                <td>@(sirket.Calisans?.Count ?? 0)</td>
                                <td>
                                    @if (sirket.AktifMi == true)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@sirket.SirketId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-action="Details" asp-route-id="@sirket.SirketId" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Detay
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@sirket.SirketId" class="btn btn-danger btn-sm"
                                           onclick="return confirm('Bu şirketi silmek istediğinize emin misiniz?');">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sirketlerTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "pageLength": 10,
                "order": [[0, "asc"]],
                "columnDefs": [
                    { "orderable": false, "targets": 4 }
                ],
                "responsive": true,
                "autoWidth": false
            });
        });
    </script>
}
