@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Müşteriler";
}
<style>
    .Asagıyacek {
        max-height: 620px;
    }

    .card-body {
        margin-bottom: 30px;
    }
</style>
<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Müşteri Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Müşteri
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive Asagıyacek">
                <table class="table table-striped datatable">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Müşteri Kategori</th>
                            <th>Müşteri Grubu</th>                          
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.CustomerCategory?.Name</td>
                                <td>@item.CustomerGroup?.Name</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>