@model KayipCalinti
@{
    ViewData["Title"] = "Kayıp/Çalıntı Detay";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kayıp/Çalıntı Detayları</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ürün</dt>
                <dd class="col-sm-9">@(Model.Zimmet?.Urun?.Model?.ModelAdi ?? ViewBag.Name)</dd>

                <dt class="col-sm-3">Zimmetli Personel</dt>
                <dd class="col-sm-9">@(Model.Zimmet?.AtananCalisan?.AdSoyad ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Kayıp/Çalıntı Tarihi</dt>
                <dd class="col-sm-9">@Model.Tarih.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">@(Model.KayipMi ? "Kayıp" : "Çalıntı")</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@(Model.Aciklama ?? "Açıklama yok")</dd>
            </dl>

            <div class="text-end mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 