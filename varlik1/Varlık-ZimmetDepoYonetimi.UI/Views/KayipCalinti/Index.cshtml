@model IEnumerable<KayipCalinti>
@{
    ViewData["Title"] = "Kayıp/Çalıntı Listesi";
}
<style>
    .Asagıyacek {
        max-height: 620px;
    }

    .card-body {
        margin-bottom: 30px;
    }
</style>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kayıp/Çalıntı Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kayıt
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive Asagıyacek">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Zimmet Ürün</th>
                            <th>Personel</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Zimmet?.Urun?.Model?.ModelAdi ?? "Belirtilmemiş")</td>
                                <td>@(item.Zimmet?.AtananCalisan?.AdSoyad ?? "Belirtilmemiş")</td>
                                <td>@item.Tarih.ToString("dd/MM/yyyy")</td>
                                <td>@(item.KayipMi ? "Kayıp" : "Çalıntı")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.KayipCalintiId" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Detay
                                    </a>
                                    @if (User.IsInRole("Admin") || User.HasClaim("Permission", Permissions.KayıpCalıntı.Silme))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.KayipCalintiId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });
        });
    </script>
}