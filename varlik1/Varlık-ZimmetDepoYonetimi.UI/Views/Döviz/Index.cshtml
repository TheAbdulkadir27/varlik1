@model List<Varlık_ZimmetDepoYonetimi.UI.Models.ViewModels.DovizViewModel>
@using System.Globalization;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .custom-table-container {
        max-height: 670px; /* dikey scroll için */
        overflow-y: auto;
        overflow-x: auto; /* yatay scroll için */
        border: 1px solid #dee2e6;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .custom-table tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .custom-table thead {
        position: sticky;
        top: 0;
        background-color: #0d6efd;
        color: white;
        z-index: 2;
    }

    .custom-table th, .custom-table td {
        padding: 16px 20px;
        font-size: 1rem;
        min-width: 180px; /* kolonları biraz genişletir */
        text-align: center;
    }
</style>

<div class="container-fluid mt-4">
    <h2 class="text-center mb-4">Döviz Kurları (TCMB)</h2>
    <div class="custom-table-container">
        <table class="table table-hover table-bordered table-striped custom-table">
            <thead class="text-center">
                <tr>
                    <th scope="col">Döviz</th>
                    <th scope="col">Alış</th>
                    <th scope="col">Satış</th>
                    <th scope="col">Tarih</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Isim (@item.Kod)</td>
                        <td>@item.ForexBuying.ToString("N2")</td>
                        <td>@item.ForexSelling.ToString("N2")</td>
                        <td>@DateTime.Now.ToString("dd MMMM yyyy", new CultureInfo("tr-TR")) </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>