@model IEnumerable<SalesOrder>
@using System;
@{
    ViewData["Title"] = "Satış Siparişleri";
}
<style>
    .Asagıyacek {
        max-height: 620px;
    }

    .card-body {
        margin-bottom: 30px;
    }
</style>
<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Satış Siparişleri</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Satış Siparişi
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive Asagıyacek">
                <table class="table table-striped datatable">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>Sipariş Tarihi</th>
                            <th>Toplam Tutar</th>
                            <th>Müşteri</th>
                            <th>Vergi Adı</th>
                            <th>Durumu</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Number</td>
                                <td>@item.OrderDate!.Value.ToShortDateString()</td>
                                <td>₺@Convert.ToDecimal(item.AfterTaxAmount / 100).ToString("N0", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>@item.Customer?.Name</td>
                                <td>@item.Tax?.Name</td>
                                <td>@item.OrderStatus!.Value</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>