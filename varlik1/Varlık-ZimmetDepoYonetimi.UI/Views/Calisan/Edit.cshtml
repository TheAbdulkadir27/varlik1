@model CalisanViewModel
@{
    ViewData["Title"] = "Çalışan Düzenle";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Çalışan Düzenle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" id="employeedit">
                <input type="hidden" asp-for="CalisanId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                    <input asp-for="AdSoyad" class="form-control" />
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AboneNo" class="form-label">Abone No</label>
                    <input asp-for="AboneNo" class="form-control" />
                    <span asp-validation-for="AboneNo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label">Telefon</label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mail" class="form-label">E-posta</label>
                    <input asp-for="Mail" class="form-control" type="email" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SirketId" class="form-label">Şirket</label>
                    <select asp-for="SirketId" asp-items="@Model.Sirketler" class="form-select">
                        <option value="">Seçiniz...</option>
                    </select>
                    <span asp-validation-for="SirketId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EkipId" class="form-label">Ekip</label>
                    <select asp-for="EkipId" asp-items="@Model.Ekipler" class="form-select">
                        <option value="">Seçiniz...</option>
                    </select>
                    <span asp-validation-for="EkipId" class="text-danger"></span>
                </div>

                <div class="text-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById("employeedit").addEventListener("submit", function (e) {
        if (!this.checkValidity()) {
            return;
        }
        const button = this.querySelector("button[type='submit']");
        button.disabled = true;
        button.innerText = "Lütfen Bekleyin...";
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 