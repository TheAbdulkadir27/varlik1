@model Calisan
@{
    ViewData["Title"] = "Çalışan Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4>Çalışan Detayları</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Ad Soyad</dt>
                        <dd class="col-sm-9">@Model.AdSoyad</dd>

                        <dt class="col-sm-3">Ekip</dt>
                        <dd class="col-sm-9">@Model.Ekip?.EkipAdi</dd>

                        <dt class="col-sm-3">Şirket</dt>
                        <dd class="col-sm-9">@Model.Ekip?.Sirket?.SirketAdi</dd>
                    </dl>

                    <h5 class="mt-4">Aktif Zimmetler</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Zimmet Tarihi</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var zimmet in (Model?.Zimmetler ?? Enumerable.Empty<Zimmet>()).Where(z => !z.IadeTarihi.HasValue))
                                {
                                    <tr>
                                        <td>@zimmet.Urun?.Model?.ModelAdi</td>
                                        <td>@zimmet.ZimmetTarihi.ToShortDateString()</td>
                                        <td>
                                            <span class="badge badge-primary">Aktif</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.CalisanId" class="btn btn-primary">Düzenle</a>
                        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 