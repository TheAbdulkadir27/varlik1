@model Calisan
@{
    ViewData["Title"] = "Çalışan Sil";
}
<div class="container mt-4">
    @{
        var message = TempData["Message"] as string;
        if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger">
                @message
            </div>
        }
    }
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Çalışan Silme Onayı</h3>
        </div>
        <div class="card-body">
            <h4>Bu çalışanı silmek istediğinizden emin misiniz?</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3">Ad Soyad</dt>
                <dd class="col-sm-9">@(Model?.AdSoyad ?? "Belirtilmemiş")</dd>
               
                <dt class="col-sm-3">Abone No</dt>
                <dd class="col-sm-9">@(Model?.AboneNo ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@(Model?.Telefon ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@(Model?.Mail ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Şirket</dt>
                <dd class="col-sm-9">@(Model?.Sirket?.SirketAdi ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Ekip</dt>
                <dd class="col-sm-9">@(Model?.Ekip?.EkipAdi ?? "Belirtilmemiş")</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">@((Model?.AktifMi ?? false) ? "Aktif" : "Pasif")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="CalisanId" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 