@model IEnumerable<Varlık_ZimmetDepoYonetimi.UI.Models.ViewModels.RolViewModel>
@{
    ViewData["Title"] = "Roller";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Rol
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Rol Adı</th>
                            <th>Kullanıcı Sayısı</th>
                            <th>Yetkiler</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rol in Model)
                        {
                            <tr>
                                <td>@rol.RolAdi</td>
                                <td>@rol.KullaniciSayisi</td>
                                <td>
                                    @foreach (var yetki in rol.Yetkiler)
                                    {
                                        <span class="badge bg-info me-1">@yetki</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@rol.RolId" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@rol.RolId" class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?');">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
