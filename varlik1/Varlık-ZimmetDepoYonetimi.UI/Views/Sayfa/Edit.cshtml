@model Sayfa
@{
    ViewData["Title"] = "Sayfa Düzenle";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Sayfa Düzenle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="SayfaId" />
                <div class="mb-3">
                    <label asp-for="SayfaAd" class="form-label">Sayfa Adı</label>
                    <input asp-for="SayfaAd" class="form-control" />
                    <span asp-validation-for="SayfaAd" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SayfaPath" class="form-label">Sayfa Path</label>
                    <input asp-for="SayfaPath" class="form-control" />
                    <span asp-validation-for="SayfaPath" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="AktifMi" class="form-check-input" />
                    <label asp-for="AktifMi" class="form-check-label">Aktif</label>
                </div>
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 