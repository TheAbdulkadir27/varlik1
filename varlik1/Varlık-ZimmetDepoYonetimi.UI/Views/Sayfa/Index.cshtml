@model IEnumerable<Sayfa>
@{
    ViewData["Title"] = "Sayfalar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sayfa Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Sayfa
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sayfa Adı</th>
                            <th>Path</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SayfaAd</td>
                                <td>@item.SayfaPath</td>
                                <td>@(item.AktifMi == true ? "Aktif" : "Pasif")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.SayfaId" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.SayfaId" class="btn btn-danger" 
                                           onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 